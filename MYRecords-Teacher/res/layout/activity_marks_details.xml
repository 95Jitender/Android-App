<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MarksDetails" >

         <EditText
             android:id="@+id/editText1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/view1"
             android:layout_below="@+id/view1"
             android:layout_marginTop="66dp"
             android:background="@drawable/edittext"
             android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz_1234567890"
             android:ems="10"
             android:gravity="center"
             android:hint="Test Name"
             android:maxLength="40"
             android:singleLine="true"
             android:textColorHint="#ff8566" >

             <requestFocus />
         </EditText>

         <EditText
             android:id="@+id/editText2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/editText1"
             android:layout_below="@+id/editText1"
             android:layout_marginTop="24dp"
             android:background="@drawable/edittext"
             android:digits="1234567890"
             android:ems="10"
             android:gravity="center"
             android:hint="Maximum Marks"
             android:maxLength="40"
             android:singleLine="true"
             android:textColorHint="#ff8566" />

         <Button
             android:id="@+id/button1"
             android:layout_width="150dp"
             android:layout_height="40dp"
             android:layout_below="@+id/editText2"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="34dp"
             android:background="@drawable/button"
             android:text="Proceed"
             android:textColor="#fff" />

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:paddingBottom="10dp"
             android:text="Large Text"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="#e62e00" />

         <View
             android:id="@+id/view1"
             android:layout_width="wrap_content"
             android:layout_height="1dp"
             android:layout_below="@+id/textView1"
             android:layout_centerHorizontal="true"
             android:background="#e62e00" />

</RelativeLayout>
