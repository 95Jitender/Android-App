<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e62e00"
    android:orientation="vertical"
    android:padding="10dp" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/backimagee"
        android:visibility="gone"  />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:divider="@drawable/divider2"
        android:drawSelectorOnTop="false"
        android:listSelector="#e62e00"
        android:overScrollMode="never"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/scrollbarvertical2" >

    </ListView>

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView1"
        android:background="@drawable/button"
        android:drawableRight="@drawable/submit"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Submit Attendance  "
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>